{
  "manifest_version": 3,
  "name": "YouTube Mini Player Button Restorer",
  "version": "1.0.0",
  "description": "Brings back the missing mini player button on YouTube with the same 'i' key functionality.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Mini Player Button Restorer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "YouTube Mini Player Extension",
  "homepage_url": "https://github.com/your-username/youtube-mini-player-extension"
}
